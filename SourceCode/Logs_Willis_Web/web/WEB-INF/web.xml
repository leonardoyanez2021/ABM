<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://java.sun.com/xml/ns/javaee"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://java.sun.com/xml/ns/javaee
		  http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd"
           version="3.0">

    <welcome-file-list>
        <welcome-file>view/login.xhtml</welcome-file>
    </welcome-file-list>

    <context-param>
        <param-name>primefaces.THEME</param-name>
        <param-value>bootstrap</param-value>
    </context-param>

    <servlet>
        <servlet-name>Faces Servlet</servlet-name>
        <servlet-class>javax.faces.webapp.FacesServlet</servlet-class>
        <load-on-startup>1</load-on-startup>
    </servlet>

    <servlet-mapping>
        <servlet-name>Faces Servlet</servlet-name>
        <url-pattern>*.xhtml</url-pattern>
    </servlet-mapping>

    <filter>
        <filter-name>AuthenticationFilter</filter-name>
        <filter-class>cl.blueprintsit.auth.AuthenticationFilter</filter-class>
    </filter>

    <filter-mapping>
        <filter-name>AuthenticationFilter</filter-name>
        <url-pattern>/view/CargarArchivo.xhtml</url-pattern>
        <url-pattern>/view/Configuracion.xhtml</url-pattern>
        <url-pattern>/view/ConsultaLog.xhtml</url-pattern>
        <url-pattern>/view/EnviarSFTP.xhtml</url-pattern>
        <url-pattern>/view/EstadoProceso.xhtml</url-pattern>
        <url-pattern>/view/CambioStock.xhtml</url-pattern>
        <url-pattern>/view/Cobranza.xhtml</url-pattern>
        <url-pattern>/view/UnificacionDevengo.xhtml</url-pattern>
        <url-pattern>/view/MantenedorTablaHomologacion.xhtml</url-pattern>
        <url-pattern>/view/DBManager.xhtml</url-pattern>
    </filter-mapping>

    <context-param>
        <param-name>javax.faces.DATETIMECONVERTER_DEFAULT_TIMEZONE_IS_SYSTEM_TIMEZONE</param-name>
        <param-value>true</param-value>
    </context-param>
    <context-param>
        <param-name>org.apache.myfaces.SERIALIZE_STATE_IN_SESSION</param-name>
        <param-value>false</param-value>
    </context-param>
</web-app>
