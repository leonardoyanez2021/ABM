<?xml version="1.0" encoding="UTF-8"?>
<server description="new server">

	<!-- Enable features -->
	<featureManager>
		<feature>ejbLite-3.2</feature>
		<feature>jsf-2.2</feature>
		<feature>jdbc-4.1</feature>
		<feature>jpa-2.1</feature>
		<feature>servlet-3.1</feature>
		<feature>localConnector-1.0</feature>
	</featureManager>

	<!-- To access this server from a remote client add a host attribute to the following element, e.g. host="*" -->
	<httpEndpoint id="defaultHttpEndpoint"
		host="*"
		httpPort="${httpPort}"
		httpsPort="${httpsPort}"/>

	<!-- Automatically expand WAR files and EAR files -->
	<applicationManager autoExpand="true"/>

	<enterpriseApplication id="Wills" location="/metlife/runtime/installed/wlp/usr/servers/gestion/Logs_Willis_EAR-1.0-SNAPSHOT.ear" name="Willis" type="ear" />

	<library id="OracleLib">
		<fileset dir="${OS400_TOOLBOX_JDBC_DRIVER_PATH}" includes="ojdbc14.jar"/>
	</library>

	<dataSource jndiName="${oracleJndiNamePreIngreso}" transactional="false">
		<jdbcDriver libraryRef="OracleLib"/>
		<properties.oracle driverType="${oracleDriverTypePreIngreso}" databaseName="${oracleDbNamePreIngreso}"
			serverName="${oracleServerNamePreIngreso}" portNumber="${oracleDbPortPreIngreso}"
			user="${oracleDbUsrNmePreIngreso}" password="${oracleDbPwdPreIngreso}"/>
	</dataSource>
	<dataSource jndiName="${oracleJndiNamePipeSponsor}" transactional="false">
		<jdbcDriver libraryRef="OracleLib"/>
		<properties.oracle driverType="${oracleDriverTypePipeSponsor}" databaseName="${oracleDbNamePipeSponsor}"
			serverName="${oracleServerNamePipeSponsor}" portNumber="${oracleDbPortPipeSponsor}"
			user="${oracleDbUsrNmePipeSponsor}" password="${oracleDbPwdPipeSponsor}"/>
	</dataSource>

	<httpAccessLogging id="httpLogging" filePath="${logDir}/${wlp.server.name}/${httpLogName}" logFormat='%h %u %{t}W "%r" %s %b'
			maxFileSize="${httpLogMaxSize}" maxFiles="${httpLogMaxFiles}"/>

	<logging copySystemStreams="false" logDirectory="${logDir}/${wlp.server.name}"
		consoleLogLevel="${logLevel}" maxFileSize="${logMaxSize}" maxFiles="${logMaxFiles}">
		<binaryLog purgeMinTime="${purgeMinTime}" outOfSpaceAction="${outOfSpaceAction}" purgeMaxSize="${purgeMaxSize}"/>
	</logging>

</server>